CC := gcc

TEST:= clock_test

C_SOURCE := $(shell find -name '*.c')
#Get object file generated by C source file
OBJ := $(subst .c,.o,$(C_SOURCE))
OBJ_ALL := $(OBJ) 

all: $(TEST) 

$(TEST): $(OBJ) 
	$(CC) -o $@ $^ $(LD_FLAGS)
%.o: %.c
	$(CC) $(C_FLAGS) $(INCLUDE) -c -o $@ $<

clean:
	rm -rf $(OBJ_ALL)
	rm -rf $(TEST)
